{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build and Run",
            "command": "make -j$[$(nproc) * 2] && ./main",
            "options": {
                "cwd": "${workspaceFolder}/build",
            },
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true,
            },
        },
        {
            "type": "shell",
            "label": "Run CMake",
            "command": "rm -rf build && mkdir -p build && cd build && cmake ..",
            "options": {
                "cwd": "${workspaceFolder}",
            },
            "problemMatcher": "$gcc",
            "group": "build"
        },
    ]
}